{
  "name": "my-electron-vite-project",
  "private": true,
  "version": "0.0.7",
  "type": "module",
  "productName": "demo",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder --win --x64 --ia32",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "build-go": "cd go-server && go mod download && set GOARCH=386&& set GOOS=windows&& go build -v -o ../resource/go-server/x86/go-server.exe ."
  },
  "build": {
    "asar": true,
    "directories": {
      "output": "release/${version}"
    },
    "extraResources": [
      {
        "from": "resource/go-server/x86/go-server.exe",
        "to": "."
      }
    ],
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "!**/*.map",
      "!**/node_modules/**/{test,__tests__}/**",
      "!**/.vscode/**",
      "!**/docs/**",
      "!**/test/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "${productName}_Setup_${version}_${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "antd": "^5.24.6",
    "axios": "^1.8.4",
    "echarts-for-react": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
}
